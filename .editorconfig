;.editorconfig

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.conf]
indent_style = space
indent_size = 2

[*.{js,jsx}]
indent_style = tab
indent_size = 4
end_of_line = lf

[**.jsx]
e4x = true

[**.html]
max_char = 78
brace_style = expand

[**.yaml]
indent_style = space
indent_size = 2
